\input{name-casting}

\newcommand{\mSymbolCode}[2][regular]{%
    {%
        \IfEqCase{#1}{%
            {outlined}{\MaterialSymbolsOutlined\symbol{"#2}}%
            % {rounded}{\MaterialSymbolsRounded\symbol{"#2}}%
            % {sharp}{\MaterialSymbolsSharp\symbol{"#2}}%
            % {outlined-filled}{\MaterialSymbolsOutlinedFilled\symbol{"#2}}%
            % {rounded-filled}{\MaterialSymbolsRoundedFilled\symbol{"#2}}%
            % {sharp-filled}{\MaterialSymbolsSharpFilled\symbol{"#2}}%
        }[\MaterialSymbolsOutlined\symbol{"#2}]%
    }%
}

\newcommand{\mSymbol}[2][regular]{%
  \makebox[0.5em]{
  \raisebox{-0.3ex}{
      \pgfkeysgetvalue{/mSymbols/#2}\tempSymbolCode%
      \mSymbolCode[#1]{\tempSymbolCode}
  }%
  }
}

